    <RelativeLayout
        android:background="#eaeaea"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        android:layout_width="match_parent"
        android:id="@+id/profile_cardview"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="#ffffff"
            android:id="@+id/prof_bal_viewer"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_height="wrap_content"
                android:text="Balace in your account\n (Available)"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Rs. 45"
                android:id="@+id/profile_wallet"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Withdraw Balance"
                android:layout_below="@id/profile_wallet"
                android:id="@+id/profile_withdraw"
                android:padding="10dp"
                android:textColor="#00f"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/prof_hr"
            android:background="@color/colorPrimary"
            android:layout_below="@id/prof_bal_viewer"/>
