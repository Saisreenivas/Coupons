<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sai.couponduni"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="26" />

    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.sai.couponduni.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- DashBoard / MainActivity -->
        <activity
            android:name="com.example.sai.couponduni.LoginActivity"
            android:label="User Login" />
        <activity
            android:name="com.example.sai.couponduni.PasswordActivity"
            android:label="Password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.sai.couponduni.AboutUsActivity"
            android:label="About Us" />
        <activity android:name="com.example.sai.couponduni.MerchantDetailsActivity" />
        <activity
            android:name="com.example.sai.couponduni.OfferDetailsActivity"
            android:label="Offer Details" />
        <activity android:name="com.example.sai.couponduni.CategoryDetailsActivity" />
        <activity android:name="com.example.sai.couponduni.EmptyLoadingActivity" />
        <activity android:name="com.example.sai.couponduni.ReferAndEarnActivity" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.sai.couponduni.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>